{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<h1 class=" text-3xl ">Panier</h1>

{% if paniers is empty %}

<p>Votre panier est vide</p>

{% endif %}
<div class=" border p-5 w-56 m-auto bg-green-200 rounded-xl">



{% for panier in paniers %}
<div class=" border p-5 w-56 m-auto bg-green-200 rounded-xl">
<p>
{{ panier.produit.nom }}
</p>
<p> {{ panier.quantity }} x {{ panier.produit.prix }} = {{ panier.quantity * panier.produit.prix }}</p>

<div>
<a href="">
<button class="btn btn-warning">Retirer</button>
</a>

<form action="">

<button type="submit">Modifier</button>
</form>


</div>
</div>
    
{% endfor %}

<div>
<p>Total : </p>
</div>

</div>


{% endblock %}
